# SafeStep Docker Environment Configuration
# Copy this file to .env and update the values

# Application Security
SECRET_KEY=change-this-to-a-secure-random-secret-in-production

# Database Configuration
# For local development with docker-compose
DATABASE_URL=postgresql://postgres:postgres@db:5432/postgres

# For production with external Supabase
# DATABASE_URL=postgresql://postgres:your_password@db.your_project.supabase.co:5432/postgres

# Supabase Configuration (Optional - for enhanced features)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# AI Features (Optional)
GEMINI_API_KEY=your_gemini_api_key_for_chatbot

# Flask Configuration
FLASK_ENV=production

# Session Security (Production only)
SESSION_COOKIE_SECURE=true

# Application Settings
APP_NAME=SafeStep
APP_VERSION=1.0.0

# Deployment Settings
WORKERS=4
TIMEOUT=120
MAX_REQUESTS=1000